<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  {% assign books = site.books | where: 'is_featured', true %}

  <channel>
    <title>Featured Highlights</title>
    {% for book in books %}
      {% assign highlights = site.highlights | where:"book_uuid", book.uuid %}
      {% for highlight in highlights %}
        <item>
          <title>{{ book.title | xml_escape }}</title>
          <description>{{ highlight.content }}</description>
        </item>
      {% endfor %}
    {% endfor %}
  </channel>
</rss>